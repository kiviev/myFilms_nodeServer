
<%if (film && film.local) { %>
    <video id="my-video_<%= index %>" class="video-js vjs-default-skin vjs-16-9 vjs-big-play-centered" controls height="400px" width="auto" preload="auto" data-setup="{'fluid': true}" >
    </video>
    <script>
        var videoTag_<%= index %> = $('#my-video_<%= index %>');
        var player_<%= index %> = videojs.getPlayer('my-video_<%= index %>');
            $(document).ready(function(){
                var url_<%= index %> = '<%= film.local.url ? film.local.url : film.local.src %>';
                var src_<%= index %> = {
                    src: url_<%= index %>,
                    type: 'video/mp4'
                }
                var player_<%= index %> = videojs.getPlayer('my-video_<%= index %>');
                player_<%= index %>.src(src_<%= index %>);
            });
            
        $('#modalVideo_<%= index %>').on('hidden.bs.modal', function (e) {
            var player_<%= index %> = videojs.getPlayer('my-video_<%= index %>');
            player_<%= index %>.pause();
        }) 
    </script>
<% } %>

