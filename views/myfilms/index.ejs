<!DOCTYPE html>
<html>
<% include ./partials/head %>
  <!-- DEMO STYLES and NOTES BELOW -->
  <style type="text/css">
    body {
      background-color: rgba(0, 0, 0, 0.03);
      padding-top: 15px;
      font-family: 'Lato', sans-serif;
    }
  
    /* make gutter sizes consistent */
  
    .flex-row {
      padding-left: 15px;
      padding-right: 15px;
    }
  
    /* 
      Extra Small Devices, Phones { .col-xs-$ } 
        ~ 480px to 767px ~
    
      Extra Small Devices, Phones { .col-sm-$ } 
        ~ 768px to 991px ~
    
      Extra Small Devices, Phones { .col-md-$ } 
        ~ 992 to 1200px ~
    
      Extra Small Devices, Phones { .col-lg-$ } 
        ~ 1201px up ~
     */
  
    /* Extra Media Query Below for Retina Iphones and Smaller */
  
    @media only screen and (max-width: 480px) {
      .flex-row>[class*='col-'] {
        width: 100%;
      }
      .flex-row {
        padding-left: 0px;
        padding-right: 0px;
      }
    }
  </style>
<body>
  <!--  -->
  <!-- Navbar -->
  <!--  -->
  <% include ./partials/navbar %>
  
  
  <!-- Displaying the movies -->

  
  <!-- Page header for flexbox example -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Lista de Películas</h1>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <br>
  
  <div class="container">
    <div class="flex-row row">
   <%if (data.films && data.films.length) { %>
      <% data.films.forEach(function(film,index) { %>
          <% include ./partials/card-film %>
      <% }); %>
    <% }else if (data.video){ %>
        <% include ./partials/video %>
    <% } %>
    </div>
    <!-- /.flex-row  -->
  </div>
  <!-- /.container  -->
  
  
  
  <footer style="padding: 20px; border-top: 1px solid #eee; margin-top: 25px;">
    <div class="container">
      <div class="text-muted text-center">
        Copyright © 2015 Bryan Willis
      </div>
    </div>
  </footer>


</body>

</html>
